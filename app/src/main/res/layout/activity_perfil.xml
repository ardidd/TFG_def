<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:orientation="vertical"
    tools:context=".Perfil">

    <ImageButton
        android:id="@+id/btnVolverPerfil"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#1B1B1B"
        android:contentDescription="volver"
        android:src="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icons8_male_user_50"
            tools:srcCompat="@drawable/icons8_male_user_50" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/days_one"
            android:text="MI PERFIL"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_weight="0"
        android:backgroundTint="#FF9800"
        android:gravity="center"
        android:text="InformaciÃ³n de la cuenta"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnInvitar"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF9800"
        android:gravity="center"
        android:text="Inivitar a un amigo"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:background="#FF9800"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>