<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/icons8_home_50" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/days_one"
            android:text="HOME"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPlanA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="PLANES DE SUBSCRIPCIÃ“N"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnPlanB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="MI PERFIL"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnPlanC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="PLANES DE ENTRENAMIENTO"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnDietaRecorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="DIETA DE RECORTE"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnActividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="ACTIVIDADES"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnAcceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:backgroundTint="#FF9800"
        android:text="ACCESO"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:background="#FF9800"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>